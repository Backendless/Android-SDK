<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/TopPanelBlackLayoutStyle" android:baselineAligned="false"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_toppanel_registration"
                style="@style/TopPanelLabelStyle"
                android:textSize="16dp" android:layout_gravity="center"
                android:gravity="center" android:typeface="normal" android:textStyle="normal"/>
    </LinearLayout>
    <LinearLayout style="@style/MainLayouStyle" android:layout_gravity="top" android:gravity="top">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/LogRegFieldsStyle"
                >
            <ImageView
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_name"
                    style="@style/FieldIconStyle"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FieldSeparatorStyle"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/nameField"
                    style="@style/LogRegFieldsTextStyle" android:hint="@string/textfield_name_default"
                    android:textSize="14.5dp" android:typeface="normal" android:textStyle="normal"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/LogRegFieldsStyle"
                >
            <ImageView
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_key"
                    style="@style/FieldIconStyle"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FieldSeparatorStyle"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/passwordField"
                    style="@style/LogRegFieldsTextStyle" android:hint="@string/textfield_password_default"
                    android:textSize="14.5dp" android:textStyle="normal" android:typeface="normal"
                    android:password="true"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/LogRegFieldsStyle"
                >
            <ImageView
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_key"
                    style="@style/FieldIconStyle"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FieldSeparatorStyle"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/verifyPasswordField"
                    style="@style/LogRegFieldsTextStyle" android:hint="@string/textfield_verify_password_default"
                    android:textSize="14.5dp" android:typeface="normal" android:textStyle="normal"
                    android:password="true"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/LogRegFieldsStyle"
                >
            <ImageView
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_email"
                    style="@style/FieldIconStyle"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FieldSeparatorStyle"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailField"
                    style="@style/LogRegFieldsTextStyle" android:hint="@string/textfield_email_default"
                    android:textSize="14.5dp" android:textStyle="normal" android:typeface="normal"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/LogRegFieldsStyle"
                >
            <ImageView
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calendar"
                    style="@style/FieldIconStyle"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FieldSeparatorStyle"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="date"
                    android:id="@+id/birthdateField"
                    style="@style/LogRegFieldsTextStyle" android:hint="@string/textfield_dateofbirth_default"
                    android:textSize="14.5dp" android:typeface="normal" android:textStyle="normal"/>
        </LinearLayout>
        <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:id="@+id/genderGroup"
                android:layout_marginBottom="@dimen/smallPadding">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_gender"
                    android:textSize="14.5dp" android:textColor="@color/fields_text_color"
                    android:layout_marginRight="@dimen/defaultMargin" android:textStyle="normal"
                    android:typeface="normal"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/genderMale"
                    style="@style/RadioStyleDefault"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_male"
                    android:layout_gravity="center_vertical" android:paddingBottom="2dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:id="@+id/genderFemale"
                    style="@style/RadioStyleDefault"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_female"
                    android:layout_gravity="center_vertical" android:paddingTop="10dp"/>
        </RadioGroup>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp" style="@style/DoubleButtonLayoutStyle">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/button_register"
                    android:id="@+id/registerButton" style="@style/ButtonFullPinkStyle" android:textSize="16dp"
                    android:typeface="normal" android:textStyle="normal"/>
        </LinearLayout>
        <LinearLayout style="@style/DoubleButtonLayoutStyle" android:orientation="horizontal"
                      android:layout_width="fill_parent" android:layout_height="40dp" android:id="@+id/linearLayout">
            <Button style="@style/ButtonFullPinkStyle" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:text="@string/button_cancel"
                    android:id="@+id/cancelButton" android:textSize="16dp" android:typeface="normal"
                    android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
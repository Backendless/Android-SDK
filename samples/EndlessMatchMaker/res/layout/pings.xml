<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/TopPanelBlackLayoutStyle" android:baselineAligned="false"
            android:gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_toppanel_pings"
                style="@style/TopPanelLabelStyle"
                android:layout_weight="10" android:gravity="center" android:textSize="16dp" android:textStyle="normal"
                android:typeface="normal"/>
        <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_edit"
                android:id="@+id/editButton"
                style="@style/ButtonTopPanelRightStyle"
                android:layout_gravity="right" android:layout_weight="1"/>-->
    </LinearLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:paddingBottom="@dimen/defaultPadding"
                android:layout_gravity="center_horizontal" style="@style/MainLayouStyle">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You pinged: "
                    android:id="@+id/textView" android:layout_gravity="left|center_vertical"
                    style="@style/ItalicLabels" android:layout_marginTop="7dp" android:textColor="#FFFFFF"
                    android:layout_marginBottom="2dp"/>
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_calendar_top"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pingedContainer"/>
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_calendar_bottom"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You were pinged:"
                    android:id="@+id/textView1" style="@style/ItalicLabels" android:layout_marginTop="7dp"
                    android:textColor="#FFFFFF" android:layout_marginBottom="2dp"/>
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                       android:background="@drawable/background_calendar_top"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:id="@+id/werePingedContainer"/>
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                       android:background="@drawable/background_calendar_bottom"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ping comfirmed:"
                    android:id="@+id/textView2" style="@style/ItalicLabels" android:layout_marginTop="7dp"
                    android:textColor="#FFFFFF" android:layout_marginBottom="2dp"/>
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                       android:background="@drawable/background_calendar_top"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:id="@+id/callbackPingsContainer"/>
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                       android:background="@drawable/background_calendar_bottom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@android:style/Theme.Dialog" android:padding="@dimen/defaultPadding"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textfield_goto_settings"
            android:textSize="@dimen/defaultItalicLabelFontSize" android:layout_gravity="center_vertical"
            android:textStyle="normal" android:typeface="normal"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/button_open_settings"
            android:id="@+id/openSettings" android:layout_marginTop="@dimen/defaultPadding"
            style="@android:style/Widget.Button" android:textSize="16dp" android:textStyle="normal"
            android:typeface="normal"/>
</LinearLayout>